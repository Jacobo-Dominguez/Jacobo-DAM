<Window x:Class="MVVC_Tienda_DominguezJacobo.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inicio de sesión" Height="420" Width="420" 
        WindowStartupLocation="CenterScreen"
        Background="#ebf0f3" ResizeMode="NoResize">

    <Grid>
        <Border Background="White" CornerRadius="10" Padding="25" 
                VerticalAlignment="Center" HorizontalAlignment="Center" 
                Width="330" Height="auto" >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBlock Text="Inicia sesión" FontSize="18" FontWeight="Bold"
                           Foreground="#3d4858" TextAlignment="Center" Margin="0,0,0,20"/>

                <!-- NOMBRE -->
                <TextBlock Text="Nombre de usuario" Foreground="#555" FontSize="13"/>
                <TextBox x:Name="txtNombre" Margin="0,5,0,15" Height="30" FontSize="14" />

                <!-- CONTRASEÑA -->
                <TextBlock Text="Contraseña" Foreground="#555" FontSize="13"/>
                <PasswordBox x:Name="txtClave" Margin="0,5,0,25" Height="30" FontSize="14" />

                <!-- BOTÓN -->
                <Button Content="Entrar" Height="38" Width="150"
                        HorizontalAlignment="Center"
                        Background="#2594df" Foreground="White"
                        FontSize="15" FontWeight="SemiBold"
                        Click="Entrar_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>

